<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="@dimen/_60sdp"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="@dimen/_10sdp"
    android:background="@drawable/pop_up_round_corner">

    <com.android.highreels.customViewRegular.RegularEditText
        android:id="@+id/editTextFriendID"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/gradient_background"
        android:backgroundTint="@color/white"
        android:hint="000-0000-0000"
        android:imeOptions="actionDone"
        android:lines="1"
        android:paddingHorizontal="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@+id/editTextFriendID"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/add_friend" />
</RelativeLayout>