<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="@dimen/_90sdp"
    android:layout_margin="@dimen/_minus2sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageViewVideoThumbmnail"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/chaeunwoo"
        app:riv_corner_radius="@dimen/_5sdp" />

    <com.android.highreels.customViewRegular.RegularTextView
        android:id="@+id/textViewVideoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewVideoThumbmnail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:includeFontPadding="false"
        android:text="V K Khurana"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp" />

</RelativeLayout>